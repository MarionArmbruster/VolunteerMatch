<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/8.0.171"
  xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.joinScreenController">
  <children>
    <Pane prefHeight="400.0" prefWidth="110.0" style="-fx-background-color: #885EAD;">
      <children>
        <JFXButton fx:id="volJoinMyEvents" layoutX="20.0" layoutY="197.0"
          onAction="#changeScreenVolJoinMyEventsButtonPushed" prefHeight="25.0" prefWidth="75.0"
          style="-fx-background-color: #ffffff;" text="My Events"/>
        <JFXButton fx:id="volJoinEditProfile" layoutX="20.0" layoutY="268.0"
          onAction="#changeScreenVolJoinEditProfileButtonPushed" prefHeight="25.0" prefWidth="75.0"
          style="-fx-background-color: #ffffff;" text="Edit Profile"/>
        <JFXButton fx:id="volJoinLogout" layoutX="20.0" layoutY="339.0"
          onAction="#changeScreenVolJoinLogout" prefHeight="25.0" prefWidth="75.0"
          style="-fx-background-color: #ffffff;" text="Logout"/>
      </children>
    </Pane>
    <Label layoutX="137.0" layoutY="21.0" text="Search For an Event" textFill="#885ead">
      <font>
        <Font name="System Bold" size="16.0"/>
      </font>
    </Label>
    <Separator layoutX="137.0" layoutY="55.0" prefHeight="3.0" prefWidth="585.0"/>
    <TextField layoutX="137.0" layoutY="90.0" prefHeight="25.0" prefWidth="330.0"
      promptText="Search for event by name"/>
    <Label layoutX="137.0" layoutY="200.0" text="Sort Events" textFill="#885ead">
      <font>
        <Font name="System Bold" size="16.0"/>
      </font>
    </Label>
    <Separator layoutX="137.0" layoutY="234.0" prefHeight="3.0" prefWidth="585.0"/>
    <TextField layoutX="137.0" layoutY="138.0" prefHeight="25.0" prefWidth="330.0"
      promptText="Search for event by organizer"/>
    <ComboBox layoutX="136.0" layoutY="269.0" prefHeight="25.0" prefWidth="330.0"
      promptText="Sort events by type"/>
    <ComboBox layoutX="137.0" layoutY="317.0" prefHeight="25.0" prefWidth="330.0"
      promptText="Sort events by time"/>
    <JFXButton fx:id="volJoinHome" layoutX="20.0" layoutY="55.0"
      onAction="#changeScreenVolJoinHomeButtonPushed" prefHeight="25.0" prefWidth="75.0"
      style="-fx-background-color: #ffffff;" text="Home"/>
    <JFXButton layoutX="20.0" layoutY="126.0" prefHeight="25.0" prefWidth="75.0"
      style="-fx-background-color: #ffffff;" text="Join"/>
  </children>
</AnchorPane>
